        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="elevationOverlayColor">@color/md_theme_light_surfaceTint</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="colorDialogBackground">@color/background_dialog_light</item>

        <item name="dialogCornerRadius">16dp</item>
        <item name="windowMinWidthMinor">@dimen/dialog_min_width</item>
        <item name="windowMinWidthMajor">@dimen/dialog_min_width</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width</item>
    </style>

    <style name="ActionBarTitleTextAppearance" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_title_light_color</item>
    </style>

    <style name="ActionBarSubtitleTextAppearance" parent="TextAppearance.Material3.ActionBar.Subtitle">
        <item name="android:textColor">@color/action_bar_subtitle_light_color</item>
    </style>

    <style name="DefaultCard" parent="Widget.Material3.CardView.Filled">
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.Material3.Button.TonalButton">
        <item name="iconGravity">textStart</item>
    </style>

    <style name="PrimaryTextButton" parent="Widget.Material3.Button.TextButton">

    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconGravity">textStart</item>
    </style>

    <style name="DangerButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">?attr/colorError</item>
        <item name="android:textColor">?attr/colorOnError</item>
        <item name="iconTint">?attr/colorOnError</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="DangerIconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">?attr/colorError</item>
    </style>

    <style name="BorderlessTextFieldNormal" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BorderlessTextFieldLarge" parent="">
        <item name="android:background">@null</item>
        <item name="android:singleLine">false</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>